<resources>

    <!-- Date and Clock shadow -->
    <style name="TextAppearance.StatusBar.Expanded.Clock.Shadow" parent="TextAppearance.StatusBar.Expanded.Clock" >
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="TextAppearance.StatusBar.Expanded.Date.Shadow" parent="TextAppearance.StatusBar.Expanded.Date" >
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
    </style>
 
    <!-- Custom Carrier Label -->
    <style name="TextAppearance.StatusBar.CarrierLabel" parent="@*android:style/TextAppearance.StatusBar.Icon">
        <item name="android:textSize">@dimen/status_bar_carrier_height</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/status_bar_carrier_color</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.StatusBar.PhoneTicker"
        parent="@*android:style/TextAppearance.StatusBar.Ticker">
        <!-- Note: must be dp to fit in status bar -->
        <item name="android:textSize">14dp</item>
    </style>

    <!-- App side bar -->
    <style name="AppSidebarItemText" >
        <item name="android:textColor">@color/sidebar_item_text_color</item>
        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/sidebar_item_text_shadow_color</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
    </style>

    <style name="BatteryMeterViewDrawable.Solid"/>
    <style name="BatteryMeterViewDrawable.Aicp"/>

    <style name="AppPicker" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Switch bar text appearance -->
    <style name="TextAppearance.SwitchBar" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

</resources>
