    metadata {
        purpose: PURPOSE_BUGFIX
    }
}

flag {
    name: "pinch_zoom_zero_min_span"
    namespace: "accessibility"
    description: "Whether to set min span of ScaleGestureDetector to zero."
    bug: "295327792"
}

flag {
    name: "proxy_use_apps_on_virtual_device_listener"
